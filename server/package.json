    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.3.0",
    "tslint": "^5.12.1",
    "typescript": "^4.4.3",
    "unknown-ts": "^0.1.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "fp-ts": "^2.11.5",
    "fp-ts-std": "^0.11.0",
    "io-ts": "^2.2.16",
    "ramda": "^0.27.1",
    "socket.io": "^4.2.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
        "src/**/!(*.test.*).[tj]s?(x)"
