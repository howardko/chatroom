    "lint": "eslint . --ext .ts",
    "start-dev": "tsc && nodemon dist/server.js",
    "serve-local": "cross-env NODE_ENV=production node dist/server.js",
    "start": "NODE_ENV=production node server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.22",
    "@types/cors": "^2.8.12",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.16.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.3",
    "@types/ramda": "^0.27.45",
    "@types/sinon": "^10.0.4",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "^8.1.0",
    "mocha": "^9.1.3",
    "mock-socket": "^9.0.6",
    "nodemon": "^2.0.13",
